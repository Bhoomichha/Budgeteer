<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Welcome, <%= userName %>!</h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary">+ New Savings</a>
    </div>
  </div>

  <div class="row">
    <h1 class="h2">Your Saving Goals:</h1>
    <br /><br /><br />

    <% if (savings.length > 0) { for(var i=0; i < savings.length; i++) { %>
    <div class="col-sm-3 mb-4">
      <div class="card border-primary" style="min-height: 210px">
        <a
          href="/dashboard/item/<%= savings[i]._id %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title"><%= savings[i].title %></h5>
          <p class="card-text"><%= savings[i].body %></p>
          <p class="card-text">Target Goal: $<%= savings[i].amount %></p>
        </a>
      </div>
    </div>
    <% }} else { %>
    <div class="row">
      <div class="col-3">
        <img
          src="/img/human-3.svg"
          alt="Human pointing hand toward a create button"
        />
      </div>
      <div class="col mt-md-4">
        <h3>
          Hey, <%= userName %>. You have not set any goals or budgets yet!
        </h3>
        <h5>
          Let's start your Saving Journey!<br /><br /><br /><br /><br /><br /><br />
          <a href="/dashboard/add">Set a Saving Goal!</a>
        </h5>
      </div>
    </div>
    <% } %>
  </div>
  <% if(savings.length > 0) { %>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center mt-5">
      <% if(current == 1) { %>
      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/dashboard">First</a>
      </li>
      <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
      if (i !== 1 ) { %>
      <li class="page-item"><a class="page-link" href="#">...</a></li>
      <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <%
      if(i == current ) { %>
      <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a>
      </li>
      <% } %> <% if(i == Number(current) + 4 && i < pages) { %>
      <li class="page-item"><a class="page-link" href="#">...</a></li>
      <% } %> <% } %> <% if (current == pages) { %>
      <li class="page-item disabled"><a class="page-link">Last</a></li>
      <% } else { %>
      <li class="page-item">
        <a href="/dashboard/?page=<%= pages %>" class="page-link">Last</a>
      </li>
      <% } %>
    </ul>
  </nav>

  <% } %>
</div>
