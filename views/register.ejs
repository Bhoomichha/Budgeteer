<div class="container-fluid container-fluid-custom py-md-5 mb-5">
  <form id="registrationForm" action="/register" method="POST">
    <label for="username">Fullname:</label>
    <input
      type="text"
      id="name"
      name="name"
      class="form-control"
      required
    /><br /><br />

    <label for="username">Username:</label>
    <input
      type="text"
      id="username"
      name="username"
      class="form-control"
      required
    /><br /><br />

    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      class="form-control"
      required
    /><br /><br />

    <label for="password">Password:</label>
    <input
      type="password"
      id="password"
      name="password"
      class="form-control"
      required
    /><br /><br />
  </form>
  <button type="submit">Register</button>
  <p id="message"></p>
</div>
